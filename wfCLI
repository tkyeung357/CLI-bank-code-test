#!/usr/bin/env php
<?php
// application.php

require_once __DIR__.'/vendor/autoload.php';

use Symfony\Component\Console\Application;
use Account\AccountInfoCommand;
use Account\AccountOpenCommand;
use Account\AccountCloseCommand;
use Account\AccountDepositCommand;
use Account\AccountWithdrawalCommand;
use Account\AccountListTransactionCommand;
use Account\AccountBalanceCommand;

$application = new Application();

// ... register commands
$application->add(new AccountInfoCommand());
$application->add(new AccountOpenCommand());
$application->add(new AccountCloseCommand());
$application->add(new AccountDepositCommand());
$application->add(new AccountWithdrawalCommand());
$application->add(new AccountListTransactionCommand());
$application->add(new AccountBalanceCommand());

$application->run();